    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const celebration = document.getElementById('celebration');
            const heartsContainer = document.getElementById('heartsContainer');
            
            // Mobile touch optimizations
            let touchStartTime;
            let lastTouchTime = 0;
            const touchDelay = 300; // ms delay between touch moves
            
            // Create floating hearts in the background
            function createHearts() {
                for (let i = 0; i < 15; i++) { // Fewer hearts for mobile performance
                    const heart = document.createElement('div');
                    heart.classList.add('heart');
                    heart.innerHTML = '‚ù§';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
                    heart.style.animationDelay = Math.random() * 5 + 's';
                    heart.style.fontSize = (Math.random() * 15 + 12) + 'px';
                    heartsContainer.appendChild(heart);
                }
            }
            
            createHearts();
            
            // Make the "No" button move on touch/hover
            noBtn.addEventListener('touchstart', function(e) {
                e.preventDefault();
                touchStartTime = Date.now();
                moveNoButton();
            });
            
            noBtn.addEventListener('touchend', function(e) {
                e.preventDefault();
                if (Date.now() - touchStartTime < 200) { // Short touch
                    moveNoButton();
                }
            });
            
            noBtn.addEventListener('mouseover', function() {
                if (window.innerWidth > 768) { // Only on desktop
                    moveNoButton();
                }
            });
            
            function moveNoButton() {
                const now = Date.now();
                if (now - lastTouchTime < touchDelay) {
                    return; // Too soon, ignore this touch
                }
                lastTouchTime = now;
                
                const container = document.querySelector('.container');
                const containerRect = container.getBoundingClientRect();
                const buttonRect = noBtn.getBoundingClientRect();
                
                // Calculate random position within the container
                const maxX = containerRect.width - buttonRect.width - 30;
                const maxY = containerRect.height - buttonRect.height - 30;
                
                const randomX = Math.floor(Math.random() * maxX);
                const randomY = Math.floor(Math.random() * maxY);
                
                // Apply new position with smooth transition
                noBtn.style.transition = 'all 0.3s ease';
                noBtn.style.position = 'absolute';
                noBtn.style.left = randomX + 'px';
                noBtn.style.top = randomY + 'px';
                
                // Change the button text sometimes
                const messages = [
                    "No", 
                    "Are you sure?", 
                    "Think again!", 
                    "Maybe?", 
                    "Please?", 
                    "I'm shy!",
                    "Not today?",
                    "Try again!",
                    "Can't catch me!",
                    "For Kawsar?",
                    "Hmm...",
                    "One more time?",
                    "Oops!",
                    "Missed me!",
                    "Too slow!",
                    "Almost!",
                    "Nope!",
                    "Maybe later?"
                ];
                const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                noBtn.innerHTML = `<i class="fas fa-times-circle"></i> ${randomMessage}`;
                
                // Make it smaller sometimes for mobile
                if (Math.random() > 0.7) {
                    const scale = 0.85 + Math.random() * 0.3;
                    noBtn.style.transform = `scale(${scale})`;
                }
                
                // Vibration feedback (if supported)
                if (navigator.vibrate) {
                    navigator.vibrate(50);
                }
            }
            
            // Handle the "Yes" button click/touch
            yesBtn.addEventListener('click', function() {
                handleYes();
            });
            
            yesBtn.addEventListener('touchend', function(e) {
                e.preventDefault();
                handleYes();
            });
            
            function handleYes() {
                // Show celebration
                celebration.style.display = 'block';
                
                // Hide the buttons
                yesBtn.style.display = 'none';
                noBtn.style.display = 'none';
                
                // Hide instruction
                document.querySelector('.mobile-instruction').style.display = 'none';
                
                // Create a burst of hearts
                createHeartBurst();
                
                // Add a special message with his name
                const specialMessage = document.createElement('div');
                specialMessage.innerHTML = `
                    <div style="margin-top: 15px; padding: 12px; background: rgba(255,255,255,0.9); border-radius: 10px;">
                        <h3 style="color: #ff0066; font-size: 1.4rem;">This Valentine's is perfect because it's with you, Kawsar! üíù</h3>
                    </div>
                `;
                celebration.appendChild(specialMessage);
                
                // Vibration feedback for celebration
                if (navigator.vibrate) {
                    navigator.vibrate([100, 50, 100]);
                }
            }
            
            // Create a burst of hearts animation (optimized for mobile)
            function createHeartBurst() {
                const heartCount = window.innerWidth < 400 ? 30 : 40; // Adjust based on screen size
                
                for (let i = 0; i < heartCount; i++) {
                    setTimeout(() => {
                        const heart = document.createElement('div');
                        heart.classList.add('heart');
                        heart.innerHTML = '‚ù§';
                        heart.style.left = Math.random() * 100 + 'vw';
                        heart.style.animationDuration = (Math.random() * 1.5 + 1) + 's';
                        heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
                        heart.style.color = '#ff4d6d';
                        heart.style.zIndex = '9999';
                        document.body.appendChild(heart);
                        
                        // Remove heart after animation completes
                        setTimeout(() => {
                            if (heart.parentNode) {
                                heart.remove();
                            }
                        }, 2000);
                    }, i * 40); // Slightly faster for mobile
                }
            }
            
            // Add some initial movement to the "No" button
            setTimeout(() => {
                moveNoButton();
            }, 800);
            
            // Make the "No" button move occasionally
            setInterval(() => {
                if (noBtn.style.display !== 'none' && Math.random() > 0.7) {
                    moveNoButton();
                }
            }, 4000);
            
            // Prevent zooming on double-tap
            document.addEventListener('dblclick', function(e) {
                e.preventDefault();
            }, { passive: false });
            
            // Prevent context menu on long press
            document.addEventListener('contextmenu', function(e) {
                e.preventDefault();
            });
        });
    </script>
</body>
</html>
